{% extends 'base.html.twig' %}

{% block body %}
    <h1>Group</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ grouping.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ grouping.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ grouping.description }}</td>
            </tr>

            <tr>
                <th>Person(s)</th>
                {% for person in grouping.persons %}
                <td><a href="{{ path('person_show', { 'id': person.id }) }}">{{ person.firstname }} {{ person.lastname }}</a></td>
            </tr>
            <tr>
                <th></th>
                {% endfor %}
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('group_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('group_edit', { 'id': grouping.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
